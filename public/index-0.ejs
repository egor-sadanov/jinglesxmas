  </head>
  <body id="samples">
  	 <div id="content">



<% if (user) { %>
    <!-- <h2><%= JSON.stringify(user) %></h2>-->
    <h4>Hello <%= user.name %></h4>
  <% } %>
<h4> Select your tree</h4>



<form>
	<input type="checkbox" name="tree_size" value="6" class="mycheck"> <span style="font-size: 1.2em">6 foot</span>
	<input type="checkbox" name="tree_size" value="7" class="mycheck"> <span style="font-size: 1.2em">7 foot</span>
	<input type="checkbox" name="tree_size" value="8+" class="mycheck"> <span style="font-size: 1.2em">8+</span>


<br/>
<h4>Add-ons</h4>

<input type="checkbox" name="add_ons" value="stand" class="mycheck"> <span style="font-size: 1em">Cinco tree stand</span><br/>
<input type="checkbox" name="add_ons" value="installation" class="mycheck"><span style="font-size: 1em">Tree installation</span><br/>
<input type="checkbox" name="add_ons" value="watering kit" class="mycheck"><span style="font-size: 1em">Watering Kit</span><br/>
<input type="checkbox" name="add_ons" value="preservative" class="mycheck"><span style="font-size: 1em">Preservative</span><br/>
<input type="checkbox" name="add_ons" value="removal" class="mycheck"><span style="font-size: 1em">Tree Disposal</span>

  	<br/><br/>
  	<button type="button" class="btn btn-primary" id="btnMultiple">Set Choice and Options</button>
</form>
<br/><br/>
<p id="displayLabel">Current selection: </p>
<p id="displayValue"></p>
<p id="totalPrice"><%= JSON.stringify(prices) %></p>

<a href="/auth/logout">
    Log Out
</a>
<br/><br/>
</div>
<script>

$(document).ready(function(){

  	
  	$('input[name="tree_size"]').on('change', function() {
  		$('input[name="tree_size"]').not(this).prop('checked', false);
  		var add_ons = [];
  		$("input:checkbox[name='add_ons']:checked").each(function(){    
  			add_ons.push($(this).val());    		
  		});
  		$("#displayValue").html("<span>"+$(this).val()+"</span> " + " Add-ons: "+add_ons.join(", ")+" </br>");
  		//createCookie('tree_size', '_test', 1)
   		var userPrices = readCookie('userPrices');
   		alert(JSON.stringify(userPrices));
  	});
  	$('input[name="add_ons"]').on('change', function() {
  		var add_ons = [];
  		$("input:checkbox[name='add_ons']:checked").each(function(){    
  			add_ons.push($(this).val());    		
  		});
  		
  		$("#displayValue").html("<span>"+$('input[name="tree_size"]:checked').val()+"</span> " + " Add-ons: "+add_ons.join(", ")+" </br>");
