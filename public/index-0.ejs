  			add_ons.push($(this).val());    		
  		});
  		$("#displayValue").html("<span>"+$('input[name="tree_size"]:checked').val()+"</span> " + " Add-ons: "+add_ons.join(", ")+" </br>");
  		//Cookie.set("test" : "1");
  		var  cookieValue = [];
  		cookieValue.push( $('input[name="tree_size"]:checked').val()+'}',add_ons);

  		createCookie('userCard', '{"tree_size":'+ $('input[name="tree_size"]:checked').val() +',"add_ons":"'+add_ons+'"}', 1);
